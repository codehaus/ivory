<project>
    <pomVersion>3</pomVersion>
    <name>Ivory</name>
    <groupId>ivory</groupId>
    <artifactId>ivory</artifactId>
    <currentVersion>1.0-beta-1</currentVersion>
    <organization>
        <name>Codehaus</name>
